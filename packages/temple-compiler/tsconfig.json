{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "lib": [ "es2021", "es7", "es6", "dom" ],
    "module": "commonjs",
    "noUnusedLocals": true,
    "outDir": "./dist/",
    "preserveConstEnums": true,
    "resolveJsonModule": true,
    "removeComments": true,
    "sourceMap": false,
    "strict": true,
    "target": "es6",
    "skipLibCheck": true,
    "plugins": [
      { "name": "typescript-plugin-css-modules" },
      { "name": "@ossph/temple-typescript" }
    ]
  },
  "include": [ "src/**/*.ts" ],
  "exclude": [ "dist", "node_modules", "tests" ]
}
