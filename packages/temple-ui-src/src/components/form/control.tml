<script>
  import { props, classlist, children } from '@ossph/temple';
  // Separate component related props from field attributes
  const { label, error } = props();
  classlist().add('block');
</script>
<if true={!!label}>
  <label class="block pb-3">{label}</label>
</if>
<div>{children()}</div>
<if true={!!error && error?.length > 0}>
  <div class="tx-error pt-3">{error}</div>
</if>