<script>
  // Separate component related props from field attributes
  const { label, error } = this.props;
  const children = this.originalChildren;
  const classList = this.classList;
  classList.add('block');
  if (error) {
    classList.add('tx-error');
  }

</script>
<if true={!!label}>
  <label class="block pb-3">{label}</label>
</if>
{children}
<if true={!!error && error?.length > 0}>
  <div class="pt-3">{error}</div>
</if>